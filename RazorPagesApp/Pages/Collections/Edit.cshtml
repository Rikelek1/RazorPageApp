@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RazorPagesApp.Data.Entities
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Collection.Id" />
            <div class="form-group">
                <label asp-for="Collection.Name" class="control-label"></label>
                <input asp-for="Collection.Name" class="form-control" />
                <span asp-validation-for="Collection.Name" class="text-danger"></span>
            </div>
            @for(int i = 0; i < Model.Collection.Movies.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="Collection.Movies[i].Title" class="control-label"></label>
                    <input asp-for="Collection.Movies[i].Title" class="form-control" />
                    <span asp-validation-for="Collection.Movies[i].Title" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
